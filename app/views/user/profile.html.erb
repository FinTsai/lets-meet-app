<div class="container col-sm-6 col-sm-offset-3">
  <div class="text-center">
    <p id="notice"><%= notice %></p>
    <h1>Your Profile</h1>
  </div>
  <%= form_for(@user, :url => { :action => "update_profile"}) do |f| %>
  <div class="form-group">
    <%= image_tag(@user.avatar_url, style: "width:280px;height:auto", class:"center-block img-rounded img-responsive") if @user.avatar? %>
    <%= f.file_field :avatar, class: "center-block" %>
  </div>
  <div class="form-group">
    <%= f.label "Nick Name" %>
    <%= f.text_field :nick_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "First Name" %>
    <%= f.text_field :first_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "Last Name" %>
    <%= f.text_field :last_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "Email" %>
    <%= f.text_field :email, disabled: true, class: "form-control" %>
  </div>

  <%= f.submit class:"btn btn-primary" %>
  <% end %>
</div>
